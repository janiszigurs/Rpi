@model IEnumerable<rpi_web_e.Models.Device>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<div class="col-md-3">
    <div class="well">
        <ul class="nav nav-stacked">
            <li>
                <h1 style="text-align:center">Devices</h1>
            </li>

            @if (Model.Count() != 0)
            {
                foreach (var model in Model)
                {
                    <li style="text-align:center">
                        @Ajax.ActionLink(model.Name.ToString(), "Details", new { id = model.ID }, new AjaxOptions { UpdateTargetId = "partial", InsertionMode = InsertionMode.Replace, HttpMethod = "GET" })
                    </li>
                }
            }
            else
            {
                <li style="text-align:center">
                    <p>No devices found</p>
                </li>
            }
        </ul>
    </div>
</div>

<div class="container col-md-9" id="partial"></div>

